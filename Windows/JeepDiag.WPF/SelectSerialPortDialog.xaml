<Window x:Class="JeepDiag.WPF.SelectSerialPortDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JeepDiag.WPF"
        mc:Ignorable="d"
        Title="Jeep Diagnostics"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16">
        <Label Padding="0, 0, 0, 4">Select COM Port</Label>
        <ComboBox x:Name="LstPorts" MinWidth="180" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 4, 0, 0">
            <Button Padding="4" x:Name="BtnSelect">
                Select
            </Button>
        </StackPanel>
    </StackPanel> 
</Window>
